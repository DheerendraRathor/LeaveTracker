<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_person"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ranveeraggarwal.letrack.activities.AddPersonActivity">

    <include
        android:id="@+id/add_person_app_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:id="@+id/add_person_content"
        android:layout_below="@+id/add_person_app_bar"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                style="@style/card_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Name"
                    android:textColor="@color/colorTextPrimary" />

                <EditText
                    android:id="@+id/new_person_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                style="@style/card_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Occupation"
                    android:textColor="@color/colorTextPrimary" />

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/new_person_occupation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                style="@style/card_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Start Date"
                    android:textColor="@color/colorTextPrimary" />

                <NumberPicker
                    android:id="@+id/new_person_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4" />
            </LinearLayout>

            <LinearLayout
                style="@style/card_style"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/new_person_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Frequency"
                        android:textColor="@color/colorTextPrimary" />

                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/new_person_frequency_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1" />


                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/new_person_frequency_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="2" />


                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/new_person_frequency_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="3" />


                    <android.support.v7.widget.AppCompatRadioButton
                        android:id="@+id/new_person_frequency_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="4" />
                </RadioGroup>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/add_person_submit"
        style="@style/card_style"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:padding="0dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:text="Add" />
    </LinearLayout>

</RelativeLayout>
